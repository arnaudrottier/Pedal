<div class="container">
  <div class="col">
    <h2>Book Your Bicycle</h2>
  </div>
  <div>
    <%= simple_form_for [@bicycle, @booking] do |f| %>
      <%= f.input :start_date, as: :date, html5: true %>
      <%= f.input :end_date, as: :date, html5: true %>
      <%= f.submit 'Confirm Booking', class: 'btn booking-hover' %>
    <% end %>
  </div>
</div>

