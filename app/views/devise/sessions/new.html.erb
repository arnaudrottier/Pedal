<div class="container d-flex justify-content-center border rounded mt-3 py-5" style="width: 500px; background-color: white">
<div class="col-6-12 my-3">
<h2 class="d-flex justify-content-center mb-3">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <div class="d-flex justify-content-center" style="width: 330px;"><%= f.button :submit, "Log in" %></div>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
