
  <div class="content">
    <div class="left-side">
      <div class="text-left m-3 p-2"><strong>Bikes located in <%= @query%></strong></div>
      <div class="cards">
          <% @bicycles.each do |bicycle|  %>
          <%= render "card", bicycle: bicycle %>
          <% end %>
      </div>
    </div>
    <div class="right-side">
    <div id="map"
          style="height: 100vh; width: 100%"

          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>


