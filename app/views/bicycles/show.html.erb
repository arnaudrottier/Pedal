<div class="container wrapper">
  <div class="row mt-5">
    <div class="col-6">
      <div class="card-trip mt-4 ">
        <% @bicycle.photos.each do |photo| %>
          <%= cl_image_tag photo.key, crop: :fill%>
        <% end %>
      </div>
    </div>
    <div class="col-6">
      <% if current_user == @bicycle.user %>
        <%= "You have successfully listed your bicycle!" %>
      <% else %>
        <%= render 'bookings/booking-form' %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 p-3">
      <div>
        <div class="card-header-table">
          <table>
              <tbody>
              <tr>
                <th scope="row pt-3">Type:</th>
                <td><%= @bicycle.category %></td>
              </tr>
              <tr>
                <th scope="row">Location:</th>
                <td><%= @bicycle.address %></td>
              </tr>
               <tr>
                <th scope="row">Per day:</th>
                <td>Â¥<%= @bicycle.day_price %></td>
              </tr>
               <th scope="row">Description:</th>
                <td><%= @bicycle.description %></td>
              </tr>
              </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
